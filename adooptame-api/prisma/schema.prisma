generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shelter {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  address     String
  province  Provincias @default(SantoDomingo)
  email       String
  zipcode     String
  website     String?
  description String?
  tel         String

  createdDate DateTime @default(now())
  updatedAt   DateTime @updatedAt

  animals Animal[]
}

model Animal {
  id          Int          @id @default(autoincrement())
  name        String
  species     String
  breed       String
  age         Int
  gender      Gender
  description String
  size        Size
  image_url   String
  status      AnimalStatus @default(available)

  createdDate DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Shelter   Shelter? @relation(fields: [shelterId], references: [id])
  shelterId Int?

  traits Trait[]
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  username  String     @unique
  email     String     @unique
  password  String
  province  Provincias @default(SantoDomingo)
  tel       String
  image_url String
  status    UserStatus @default(healthy)
  gender    Gender

  createdDate DateTime @default(now())
  updatedAt   DateTime @updatedAt

  traits Trait[]
}

model Trait {
  id      Int      @id @default(autoincrement())
  title   String
  Animals Animal[]
  Users   User[]
}

enum Gender {
  male
  female
  unknown
}

enum AnimalStatus {
  available
  adopted
  fostered
  transferred
  deceased
}

enum Size {
  small
  medium
  large
}

enum UserStatus {
  healthy
  disabled
  banned
}

enum Provincias {
  Azua @map("Azua")
  Baoruco @map("Baoruco")
  Barahona @map("Barahona")
  Dajabon @map("Dajabón")
  DistritoNacional @map("Distrito Nacional")
  Duarte @map("Duarte")
  EliasPina @map("Elías Piña")
  ElSeibo @map("El Seibo")
  Espaillat @map("Espaillat")
  Independencia @map("Independencia")
  LaAltagracia @map("La Altagracia")
  LaRomana @map("La Romana")
  LaVega @map("La Vega")
  MariaTrinidadSanchez @map("María Trinidad Sánchez")
  MonsenorNouel @map("Monseñor Nouel")
  MonteCristi @map("Monte Cristi")
  MontePlata @map("Monte Plata")
  Pedernales @map("Pedernales")
  Peravia @map("Peravia")
  PuertoPlata @map("Puerto Plata")
  HermanasMirabal @map("Hermanas Mirabal")
  Samana @map("Samana")
  SanchezRamirez @map("Sánchez Ramírez")
  SanCristobal @map("San Cristóbal")
  SanJosedeOcoa @map("San José de Ocoa")
  SanJuan @map("San Juan")
  SanPedrodeMacoris @map("San Pedro de Macorís")
  Santiago @map("Santiago")
  SantiagoRodriguez @map("Santiago Rodríguez")
  SantoDomingo @map("Santo Domingo")
  Valverde @map("Valverde")
}
