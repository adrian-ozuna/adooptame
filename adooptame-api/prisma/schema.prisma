// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shelter {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  address     String
  city        String
  email       String
  zipcode     String
  website     String?
  description String?
  tel         String

  createdDate DateTime @default(now())
  updatedAt   DateTime @updatedAt

  animals Animal[]
}

model Animal {
  id          Int          @id @default(autoincrement())
  name        String
  species     String
  breed       String
  age         Int
  gender      Gender
  description String
  size        Size
  image_url   String
  status      AnimalStatus

  createdDate DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Shelter   Shelter? @relation(fields: [shelterId], references: [id])
  shelterId Int?

  traits Trait[]
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  username  String     @unique
  email     String     @unique
  password  String
  tel       String
  image_url String
  status    UserStatus @default(healthy)
  gender    Gender

  createdDate DateTime @default(now())
  updatedAt   DateTime @updatedAt

  traits Trait[]
}

model Trait {
  id       Int     @id @default(autoincrement())
  title    String
  Animal   Animal? @relation(fields: [animalId], references: [id])
  animalId Int?
  User     User?   @relation(fields: [userId], references: [id])
  userId   Int?
}

enum Gender {
  male
  female
  unknown
}

enum AnimalStatus {
  available
  adopted
  fostered
  transferred
  deceased
}

enum Size {
  small
  medium
  large
}

enum UserStatus {
  healthy
  disabled
  banned
}
